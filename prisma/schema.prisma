generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        String   @id @default(uuid())
  name      String
  domain    String   @unique
  imapHost  String
  imapPort  Int      @default(993)
  smtpHost  String
  smtpPort  Int      @default(465)
  tlsMode            String   @default("tls")
  rejectUnauthorized Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("organizations")
}

model UserSettings {
  id                 String      @id @default(uuid())
  email              String      @unique
  pushNotifications  Boolean     @default(true)
  newEmailSound      Boolean     @default(true)
  sendEmailSound     Boolean     @default(true)
  pollInterval       Int         @default(30)
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
  signatures         Signature[]
  @@map("user_settings")
}

model Signature {
  id             String       @id @default(uuid())
  userSettingsId String
  userSettings   UserSettings @relation(fields: [userSettingsId], references: [id], onDelete: Cascade)
  name           String
  body           String
  isDefault      Boolean      @default(false)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  @@map("signatures")
}
